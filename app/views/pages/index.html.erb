  <section class="root-left-half">
    <nav class="root-left-half-nav">
      <div class="root-left-half-nav-content">
      </div>
    </nav>
  </section>

  <section class="root-right-half">
    <div class="root-login-form">
      <%= form_tag login_path do %>

      <%= text_field_tag :email, nil,  placeholder: 'Email Address' %>

      <%= password_field_tag :password, nil, placeholder: 'Password' %>

      <%= submit_tag "Log In", class: 'login-btn' %>
      <% end %>
    </div>

    <img src="app/assets/images/idea-bulb.jpg" alt="">
    <div class="root-register">
      <p class="join-idea">Join IdeaBox</p>
      <div class="root-register-form">
        <%= form_for @user do |f| %>
        <%= f.label :email, "Email Address" %>
        <%= f.email_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.label :full_name, "Full Name" %>
        <%= f.text_field :full_name %>

        <%= f.submit "Get Started", class: 'get-started-btn' %>
        <% end %>
      </div>
    </div>

  </section>
